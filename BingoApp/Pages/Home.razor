@page "/"

<PageTitle>Bingo-o-matic - Modern Bingo for Everyone</PageTitle>

<div class="hero-section">
    <h1>Welcome to Bingo-o-matic</h1>
    <p class="tagline">The modern way to play bingo - online, offline, anywhere!</p>
    <div class="hero-buttons">        <a href="standard-bingo" class="btn btn-primary btn-lg mt-4 me-3 animate-bounce">
            <span class="emoji-icon">🎲</span> Play Standard Bingo
        </a>
        <a href="custom-bingo" class="btn btn-outline-primary btn-lg mt-4 animate-bounce">
            <span class="emoji-icon">✏️</span> Try Custom Bingo
        </a>
    </div>
</div>

<div class="features-section">
    <h2>Features</h2>
    <div class="row g-4">
        <div class="col-md-4">
            <div class="feature-card">                <span class="emoji-icon">🎲</span>
                <h3>Standard Bingo</h3>
                <p>Traditional 5×5 grid with B-I-N-G-O headers and numbers 1-75</p>
                <a href="standard-bingo" class="btn btn-outline-primary mt-2">Play Now</a>
            </div>
        </div>
        <div class="col-md-4">
            <div class="feature-card">                <span class="emoji-icon">✏️</span>
                <h3>Custom Bingo</h3>
                <p>Create your own bingo cards with custom words or phrases</p>
                <a href="custom-bingo" class="btn btn-outline-primary mt-2">Create Set</a>
            </div>
        </div>
        <div class="col-md-4">
            <div class="feature-card">                <span class="emoji-icon">📴</span>
                <h3>Works Offline</h3>
                <p>Play anywhere - no internet connection required</p>
                <a href="https://github.com/jamesmontemagno/bingo-o-matic#installation" class="btn btn-outline-primary mt-2">Learn More</a>
            </div>
        </div>
    </div>
</div>
