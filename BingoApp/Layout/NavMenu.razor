@using Microsoft.AspNetCore.Components
@using Microsoft.AspNetCore.Components.Routing
@using Microsoft.AspNetCore.Components.Web
@inject NavigationManager NavigationManager

<nav class="navbar navbar-expand-lg">
    <div class="container">
        <a class="navbar-brand" href="">
            <div class="brand-content">
                <span class="brand-icon">🎯</span>
                <span class="brand-text">Bingo-o-matic</span>
            </div>
        </a>
        <button class="navbar-toggler" type="button" @onclick="HandleToggleNavMenu" aria-expanded="@(!IsNavMenuCollapsed)">
            <span class="navbar-toggler-icon"></span>
        </button>

        <div class="@NavMenuCssClass navbar-collapse">
            <ul class="navbar-nav me-auto">
                <li class="nav-item">
                    <NavLink class="nav-link" href="standard-bingo">
                        <i class="bi bi-grid-3x3" aria-hidden="true"></i>
                        <span class="nav-text">Standard</span>
                    </NavLink>
                </li>
                <li class="nav-item">
                    <NavLink class="nav-link" href="custom-bingo">
                        <i class="bi bi-controller" aria-hidden="true"></i>
                        <span class="nav-text">Custom</span>
                    </NavLink>
                </li>
            </ul>

            <ul class="navbar-nav">
                <li class="nav-item">
                    <NavLink class="nav-link" href="settings">
                        <i class="bi bi-gear" aria-hidden="true"></i>
                        <span class="nav-text">Settings</span>
                    </NavLink>
                </li>
                <li class="nav-item">
                    <a href="https://github.com/jamesmontemagno/bingo-o-matic" 
                       target="_blank" 
                       rel="noopener noreferrer" 
                       class="nav-link">
                        <i class="bi bi-github" aria-hidden="true"></i>
                        <span class="nav-text">View on GitHub</span>
                    </a>
                </li>
            </ul>
        </div>
    </div>
</nav>

@code {
    private bool IsNavMenuCollapsed { get; set; } = true;

    private string NavMenuCssClass => IsNavMenuCollapsed ? "collapse" : string.Empty;

    private void HandleToggleNavMenu()
    {
        IsNavMenuCollapsed = !IsNavMenuCollapsed;
    }

    protected override void OnInitialized()
    {
        NavigationManager.LocationChanged += HandleLocationChanged;
    }

    private void HandleLocationChanged(object? sender, LocationChangedEventArgs e)
    {
        IsNavMenuCollapsed = true;
        StateHasChanged();
    }

    public void Dispose()
    {
        NavigationManager.LocationChanged -= HandleLocationChanged;
    }
}
